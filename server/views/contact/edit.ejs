<%- include ('../partials/header.ejs') %>

<%- include ('../partials/main_nav.ejs') %>

<!-- Content for the Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Partner's Name"
                    name="name" 
                    value="<%= contact.name %>"
                    required>
                </div>
                <br>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Partner's Email"
                    name="email" 
                    value="<%= contact.email %>"
                    required>
                </div>
                <br>

                <div class="form-group">
                    <label for="contactNoTextField">Contact No</label>
                    <input type="text" class="form-control"
                    id="contactNoTextField"
                    placeholder="Enter the Partner's Contact No"
                    name="contactno" 
                    value="<%= contact.contactno %>"
                    required>
                </div>
                <br>

                <button class="w3-button w3-black w3-margin-bottom" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/contact-list" class="w3-button w3-black w3-margin-bottom">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>
<%- include ('../partials/bottom_nav.ejs') %>  

<%- include ('../partials/footer.ejs') %>